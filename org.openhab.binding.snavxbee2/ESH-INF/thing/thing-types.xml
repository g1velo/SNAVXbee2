		<label>SNAVXbee2 Binding relay Number 3</label>
		<description>Relay for SNAVXbee2 Binding</description>
	</channel-type>
	<channel-type id="relay4">
		<item-type>SwitchItem</item-type>
		<label>SNAVXbee2 Binding relay Number 4</label>
		<description>Relay for SNAVXbee2 Binding</description>
	</channel-type>
	<channel-type id="relay5">
		<item-type>SwitchItem</item-type>
		<label>SNAVXbee2 Binding relay Number 5</label>
		<description>Relay for SNAVXbee2 Binding</description>
	</channel-type>
	<channel-type id="relay6">
		<item-type>SwitchItem</item-type>
		<label>SNAVXbee2 Binding relay Number 6</label>
		<description>Relay for SNAVXbee2 Binding</description>
	</channel-type>
	<channel-type id="relay7">
		<item-type>SwitchItem</item-type>
		<label>SNAVXbee2 Binding relay Number 7</label>
		<description>Relay for SNAVXbee2 Binding</description>
	</channel-type>
	<channel-type id="relay8">
		<item-type>SwitchItem</item-type>
		<label>SNAVXbee2 Binding relay Number 8</label>
		<description>Relay for SNAVXbee2 Binding</description>
	</channel-type>
	<channel-type id="AD0DIO0">
		<item-type>SwitchItem</item-type>
		<label>SNAVXbee2 Binding relay Number 8</label>
		<description>Relay for SNAVXbee2 Binding</description>
		<tags>
			<tag>weather</tag>
		</tags>
	</channel-type>


</thing:thing-descriptions>
