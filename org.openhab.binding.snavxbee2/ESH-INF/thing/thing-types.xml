<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="snavxbee2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<!-- Bridge definition -->

	<bridge-type id="bridge">
		<label>SNAV Xbee2 Serial Gateway</label>
		<description>Xbee S2 connecteds with serial port
        </description>
		<config-description>
			<parameter name="serialPort" type="text" required="true">
				<context>serial-port</context>
				<label>Serial Port</label>
				<description>The serial port the SNAVXbee2 Gateway is connected to
                </description>
			</parameter>
			<parameter name="baudRate" type="integer" required="false" min="300" max="250000">
				<label>Baudrate</label>
				<description>Baudrate for serial port
                </description>
				<default>9600</default>
			</parameter>
		</config-description>
	</bridge-type>

	<!-- Sample Thing Type -->
	<thing-type id="sample">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge" />
		</supported-bridge-type-refs>
		<label>SNAVXbee2 Binding Things</label>
		<description>Sample thing for SNAVXbee2 Binding</description>
		<channels>
			<channel id="channel1" typeId="channel1" />
			<channel id="temperature" typeId="temperature" />
		</channels>
		<config-description>
			<parameter name="Xbee64BitsAddress" type="text" required="true">
				<context>Xbee64BitsAddress</context>
				<label>Xbee64BitsAddress</label>
				<description>The 64 bit addrees Xbee64BitsAddress
                </description>
			</parameter>
			<parameter name="IOChannel" type="text" required="true">
				<context>IOChannel </context>
				<label>Xbee IOChannel</label>
				<description>The IOChannel of the Xbee Device </description>
			</parameter>
		</config-description>
	</thing-type>

	<thing-type id="tosr0xt">
		<supported-bridge-type-refs>
			<bridge-type-ref id="bridge" />
		</supported-bridge-type-refs>
		<label>TOSR0XT relay can have form 1 to 8 relays and temperature sensor</label>
		<description>Sample thing for SNAVXbee2 Binding</description>
		<channels>
			<channel id="temperature" typeId="temperature" />
			<channel id="relay1" typeId="relay1" />
			<channel id="relay2" typeId="relay2" />
		</channels>
		<config-description>
			<parameter name="Xbee64BitsAddress" type="text" required="true">
				<context>Xbee64BitsAddress</context>
				<label>Xbee64BitsAddress</label>
				<description>The 64 bit addrees Xbee64BitsAddress
                </description>
			</parameter>
			<parameter name="IOChannel" type="text" required="true">
				<context>IOChannel </context>
				<label>Xbee IOChannel</label>
				<description>The IOChannel of the Xbee Device </description>
			</parameter>
		</config-description>
	</thing-type>


	<!-- Sample Channel Type -->
	<channel-type id="channel1">
		<item-type>channel1</item-type>
		<label>SNAVXbee2 Binding Channel  for testing Purpose</label>
		<description>Sample channel for SNAVXbee2 Binding</description>
	</channel-type>
	<channel-type id="temperature">
		<item-type>temperature</item-type>
		<label>SNAVXbee2 Binding Channel for reading temperature</label>
		<description>temperature channel for SNAVXbee2 Binding</description>
	</channel-type>
	<channel-type id="relay1">
		<item-type>relay1</item-type>
		<label>SNAVXbee2 Binding relay Number 1</label>
		<description>Relay for SNAVXbee2 Binding</description>
	</channel-type>
	<channel-type id="relay2">
